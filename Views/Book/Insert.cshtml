@model BookEntity
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <form action="/Book/Insert" method="post">
        <label>Book Name:  </label><input type="text" name="BookTitle" id="BookTitle" placeholder="Enter name" required />
        <br />
        <br />
        <label>Author:  </label><input type="text" name="Author" id="Author" placeholder="Enter Author" required />
        <br />
        <br />

        <button type="submit">click here to submit</button>
    </form>

    @if (ViewBag.error != null)
            {
        <p>ViewBag.error</p>
    }

</div>

